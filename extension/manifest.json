{
  "manifest_version": 3,
  "name": "GhostTyper",
  "version": "1.0.0",
  "description": "Real-time, inline AI writing suggestions as you type",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content.js"
      ],
      "css": [
        "css/suggestion.css"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  }
}